                        <span class="d-flex align-items-center"><i class="fas fa-folder me-1"></i> <%= post.category %></span>
                        <div class="tag-cloud d-flex flex-wrap">
                          <% post.tags.split(",").forEach(function(tag){%>
                        <span class="badge bg-primary me-1 mb-1"><i class="fas fa-tag"></i> <%= tag.trim() %></span>
                            <%})%>
                            </div>
                            <span class="d-flex align-items-center"><i class="fas fa-calendar-alt me-1"></i> <%= new Date(post.createdAt).toLocaleDateString('tr-TR') %></span>
